{
  // ‚ùå Desactivar Deno en este workspace
  "deno.enable": false,
  "deno.lint": false,
  "deno.unstable": false,

  // üßπ Excluir carpetas generadas del editor y del buscador
  "files.exclude": {
    "dist": true,
    "node_modules": false,
    "**/.DS_Store": true
  },

  "search.exclude": {
    "dist": true,
    "node_modules": true
  },

  // ESLint y TypeScript configurados para proyectos normales de React/Vite
  "eslint.workingDirectories": [{ "mode": "auto" }],
  "typescript.tsdk": "node_modules/typescript/lib",

  // Mejor rendering
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },

  // Opcional extra: evitar warnings innecesarios del TS server
  "typescript.validate.enable": true,
  "javascript.validate.enable": true
}